@model IEnumerable<FoodOrdering.Web.Models.FoodTable>

@{
    ViewData["Title"] = "Food Information";
}
<div class="p-3 mb-2 bg-info text-white">
<center><h1>@ViewData["Title"]</h1></center>

<p>
    <a asp-action="Create" class="btn btn-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FoodId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodName)
               
                
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FoodType)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FoodId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FoodType)
            </td>
            <td>
                
                <a asp-action="Edit" asp-route-id="@item.FoodName"class="btn btn-success">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.FoodName" class="btn btn-success">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.FoodName"class="btn btn-success">Delete</a>
                
            </td>
        </tr>
}
    </tbody>
</table>
<a class="btn btn-light" asp-area="" asp-page="/Index">Home</a>
</div>