@page
@model IndexModel
@{
    ViewData["Title"] = "My Home page";
}


<!DOCTYPE html>
<html lang="en">
<body>
  
<div id="loginmodal" class="modal fade " role="dialog">
       
        </div>
 </div>
   
  
    <!-- HEADER CODE -->
    <div class="jumbotron">
        <div class="container">
            <div class="row align-items-center">
